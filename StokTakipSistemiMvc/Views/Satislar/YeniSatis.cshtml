@model StokTakipSistemiMvc.Models.Entity.tblsatislar

@{
    ViewBag.Title = "YeniSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <h2>Yeni Kategori Ekleme</h2>
    <br />
    <label>Ürün Adı</label>
    @Html.DropDownListFor(x => x.tblurunler.id, (List<SelectListItem>)ViewBag.drop1, new { @class = "form-control" })
    <br />

    <label>Personel</label>
    @Html.DropDownListFor(x => x.tblpersonel.id, (List<SelectListItem>)ViewBag.drop2, new { @class = "form-control" })    <br />

    <label>Müşteri</label>
    @Html.DropDownListFor(x => x.tblkmusteri.id, (List<SelectListItem>)ViewBag.drop3, new { @class = "form-control" })    <br />

    <label>Fiyat</label>
    @Html.TextBoxFor(x => x.fiyat, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Satış Yap</button>
</form>

